{
    "listen":{
        "endpoints":["tcp/0.0.0.0:7447"]
    },
    "plugins_search_dirs":["/usr/lib/"],
    "plugins":{
        "storage_manager":{
        "required":true,
        "storages":{
            "zfrpc":{
                "key_expr":"zf/runtime/**",
                "volume": "memory"
                },
            "zf":{
                "key_expr":"zenoh-flow/**",
                "volume": "memory"
                }
            }
        },
        "zenoh_flow":{
            "required":true,
            "path":"/etc/zenoh-flow",
            "pid_file": "/var/zenoh-flow/runtime.pid",
            "extensions": "/etc/zenoh-flow/extensions.d",
            "worker_pool_size":4
        }
    }
}